<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Books</h1>
                <a href="/books/add" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add Book
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    {{#if books.length}}
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Author</th>
                                    <th>ISBN</th>
                                    <th>Genre</th>
                                    <th>Year</th>
                                    <th>Copies</th>
                                    <th>Added By</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each books}}
                                <tr>
                                    <td>{{title}}</td>
                                    <td>{{author}}</td>
                                    <td>{{isbn}}</td>
                                    <td>{{genre}}</td>
                                    <td>{{publishedYear}}</td>
                                    <td>{{availableCopies}}/{{totalCopies}}</td>
                                    <td>{{user.name}}</td>
                                    <td>
                                        <a href="/books/edit/{{id}}" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form action="/books/{{id}}?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this book?')">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>

                    {{#if totalPages}}
                    <nav aria-label="Books pagination">
                        <ul class="pagination justify-content-center">
                            <li class="page-item {{#unless hasPrevPage}}disabled{{/unless}}">
                                <a class="page-link" href="/books?page={{prevPage}}">Previous</a>
                            </li>
                            {{#each (range 1 totalPages)}}
                            <li class="page-item {{#if (eq this ../currentPage)}}active{{/if}}">
                                <a class="page-link" href="/books?page={{this}}">{{this}}</a>
                            </li>
                            {{/each}}
                            <li class="page-item {{#unless hasNextPage}}disabled{{/unless}}">
                                <a class="page-link" href="/books?page={{nextPage}}">Next</a>
                            </li>
                        </ul>
                    </nav>
                    {{/if}}
                    {{else}}
                    <div class="text-center py-5">
                        <i class="fas fa-book fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No books found</h5>
                        <a href="/books/add" class="btn btn-primary">Add Your First Book</a>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>