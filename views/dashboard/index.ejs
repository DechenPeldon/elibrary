<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Dashboard</h1>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>{{totalBooks}}</h4>
                            <p class="mb-0">Total Books</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-book fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>{{totalUsers}}</h4>
                            <p class="mb-0">Total Users</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>0</h4>
                            <p class="mb-0">Books Issued</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-hand-holding fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Recent Books</h5>
                    <a href="/books/add" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> Add Book
                    </a>
                </div>
                <div class="card-body">
                    {{#if recentBooks.length}}
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Author</th>
                                    <th>Genre</th>
                                    <th>Added By</th>
                                    <th>Date Added</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each recentBooks}}
                                <tr>
                                    <td>{{title}}</td>
                                    <td>{{author}}</td>
                                    <td>{{genre}}</td>
                                    <td>{{user.name}}</td>
                                    <td>{{formatDate createdAt}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <div class="text-center mt-3">
                        <a href="/books" class="btn btn-outline-primary">View All Books</a>
                    </div>
                    {{else}}
                    <div class="text-center py-4">
                        <i class="fas fa-book fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No books added yet</h5>
                        <a href="/books/add" class="btn btn-primary">Add Your First Book</a>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>